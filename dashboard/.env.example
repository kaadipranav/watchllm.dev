# ============================================================================
# SECURITY: Never commit actual values. Use Vercel env vars for production.
# ============================================================================

# ============================================================================
# DEPLOYMENT MODE
# Set to 'self_hosted' for enterprise/self-hosted deployments
# ============================================================================
WATCHLLM_MODE=saas
# NEXT_PUBLIC_WATCHLLM_MODE=saas

# ============================================================================
# APP CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_PROXY_URL=https://proxy.watchllm.dev

# ============================================================================
# SUPABASE CONFIGURATION
# SECURITY: Service role key has admin access - never expose client-side
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# PAYMENT PROVIDER CONFIGURATION
# Choose: "stripe" or "whop" - This controls which payment system is used
# ============================================================================
PAYMENT_PROVIDER=stripe

# ============================================================================
# STRIPE CONFIGURATION (only required if PAYMENT_PROVIDER=stripe)
# Get from: https://dashboard.stripe.com/apikeys
# SECURITY: Never expose STRIPE_SECRET_KEY or STRIPE_WEBHOOK_SECRET client-side
# ============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx

# ============================================================================
# WHOP CONFIGURATION (only required if PAYMENT_PROVIDER=whop)
# Get from: https://whop.com/dashboard/developer
# ============================================================================
WHOP_API_KEY=your-api-key
WHOP_APP_ID=app_xxxxxxxxxxxxxx
WHOP_COMPANY_ID=biz_xxxxxxxxxxxxxx
WHOP_WEBHOOK_SECRET=your-webhook-secret
# Optional: Create plans in Whop dashboard or let app create inline plans
WHOP_STARTER_PLAN_ID=plan_xxxxxxxxxxxxxx
WHOP_PRO_PLAN_ID=plan_xxxxxxxxxxxxxx

# ============================================================================
# EMAIL CONFIGURATION (Resend)
# Get your API key from: https://resend.com/api-keys
# SECURITY: Keep RESEND_API_KEY server-side only
# ============================================================================
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM_ADDRESS=WatchLLM <no-reply@watchllm.dev>
EMAIL_TRIGGER_SECRET=change-this-secret
CRON_SECRET=another-secret-value

# ============================================================================
# MONITORING
# ============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://public@example.ingest.sentry.io/12345

# ============================================================================
# FEATURE FLAGS (ConfigCat)
# Get your SDK key from: https://app.configcat.com/
# SECURITY: This is safe to use server-side only
# ============================================================================
CONFIGCAT_SDK_KEY=your-configcat-sdk-key

# ============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST:
# - [ ] All secrets stored in Vercel Environment Variables
# - [ ] NEXT_PUBLIC_APP_URL set to production domain
# - [ ] Stripe webhook endpoint configured in Stripe dashboard
# - [ ] Supabase RLS policies enabled
# - [ ] CRON_SECRET and EMAIL_TRIGGER_SECRET are strong random values
# ============================================================================

# ============================================================================
# CLICKHOUSE ANALYTICS
# ============================================================================
CLICKHOUSE_HOST=your-clickhouse-host
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=watchllm_user
CLICKHOUSE_PASSWORD=YourStrongPassword123!
CLICKHOUSE_DATABASE=watchllm
# Set to true if your ClickHouse endpoint is HTTPS
CLICKHOUSE_SSL=false
