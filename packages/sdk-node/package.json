{
  "name": "watchllm-sdk-node",
  "version": "0.1.0",
  "description": "TypeScript/Node.js SDK for WatchLLM AI Observability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./langchain": {
      "types": "./dist/langchain.d.ts",
      "import": "./dist/langchain.js",
      "require": "./dist/langchain.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "observability",
    "llm",
    "monitoring",
    "telemetry",
    "langchain"
  ],
  "author": "WatchLLM",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "@langchain/core": ">=0.1.0",
    "langchain": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@langchain/core": {
      "optional": true
    },
    "langchain": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ]
}
