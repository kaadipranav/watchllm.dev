    "pg": "^8.17.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@hono/node-server": "^1.19.4",
    "@types/node": "^20.0.0",
    "msw": "^2.3.2",
    "tsx": "^4.20.5",
